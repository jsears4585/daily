<header>
  <h1 id="that_guy">¯\_(ツ)_/¯</h1>
  <h3 id="sub_head">So like... APIs are pretty cool</h3>
</header>

<table cellpadding=0>
  <thead>
    <th>Image</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% @keep.each do |event| %>
      <tr>
        <td>
          <a href='https://en.wikipedia.org/?curid=<%= event["pages"].first["pageid"] %>' target='_blank'>
            <img src='<%= event["pages"].first["thumbnail"]["source"] %>' width='200'>
          </a>
        </td>
        <td class="word_padding"><span style="color: #c7bc32; font-weight: 700;"><%= event["year"] %></span> — <%= event["text"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
